{
  "name": "twitch-bot",
  "version": "0.0.0",
  "description": "",
  "main": "src/bot/",
  "scripts": {
    "start": "concurrently \"npm:compile:bot\" \"npm:start:bot\" ",
    "compile:bot": "tsc --build ./src/bot/tsconfig.json --watch",
    "start:bot": "nodemon ./build/bot/bot.js --watch build/bot",
    "compile:overlay": "tsc --build ./src/overlay/tsconfig.json --watch",
    "start:overlay": "webpack-dev-server --open --hot",
    "lint": "./node_modules/.bin/eslint '**/*.{js,ts,tsx}'",
    "test": "ava",
    "coverage": "nyc ava"
  },
  "ava": {
    "extensions": [
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patomation/twitch-bot.git"
  },
  "keywords": [
    "twitch",
    "chat",
    "bot"
  ],
  "author": "Patrick Kelly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patomation/twitch-bot/issues"
  },
  "homepage": "https://github.com/patomation/twitch-bot#readme",
  "dependencies": {
    "badwords": "^1.0.0",
    "dotenv": "^8.2.0",
    "say": "^0.16.0",
    "tmi.js": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/tmi.js": "1.4.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "ava": "^3.8.2",
    "concurrently": "5.3.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "html-webpack-plugin": "4.4.1",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "snabbdom": "2.1.0",
    "tsconfigs": "5.0.0",
    "typescript": "^3.9.7",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  }
}
